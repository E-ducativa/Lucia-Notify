# Notifier Config
# ---------------

# Only a LUCIA OPTION can be true. If more 
# than one LUCIA OPTION is set to true, 
# priority will be taken over the first match.

# Notify for user bugs

LUCIA_USER_OPTION={{ lucia_user_option }}
LUCIA_USERNAME={{ lucia_username }}

# Notify for bugs

LUCIA_BUGS_OPTION={{ lucia_bugs_option }}
LUCIA_BUGS={{ lucia_bugs }}

# Notify for bug

LUCIA_BUG_OPTION={{ lucia_bug_option }}
LUCIA_BUG_ID={{ lucia_bug_id }}

# General

LUCIA_TIME={{ lucia_time }}
LUCIA_SOUND={{ lucia_sound }}
LUCIA_NOBANNER={{ lucia_no_banner }}
LUCIA_NOGREETING={{ lucia_no_greeting }}
LUCIA_VOICE={{ lucia_voice }}
LUCIA_LANG={{ lucia_lang }}


# Database Config
# ---------------

DATABASE_NAME={{ lucia_database_name }}
DATABASE_HOST={{ lucia_database_host }}
DATABASE_PORT={{ lucia_database_port }}
DATABASE_USER={{ lucia_database_user }}
DATABASE_PASS={{ lucia_database_pass }}
